@model marble.Models.Slider

@{
    ViewBag.Title = "SliderAdd";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<style>
    .header-font {
        font-family: 'Cairo', sans-serif;
        text-align: right;
        direction: rtl;
    }

    .footer-font {
        font-family: 'Cairo', sans-serif;
        text-align: right;
    }

    .header-font-bold {
        font-family: 'Almarai', sans-serif;
        text-align: right;
        direction: rtl;
    }

    .line_1 {
        font-family: 'Cairo', sans-serif;
        text-align: right;
        font-size: larger;
    }

    .line_2 {
        font-family: 'Cairo', sans-serif;
        text-align: right;
        font-weight: bolder;
        font-size: larger;
    }

    .rtl {
        direction: rtl;
        text-align: right;
    }

    .text-font {
        font-family: GE-Flow-Regular;
    }
</style>


<!-- /.row -->
<div class="row rtl">
    <div class="col-md-12">
        <div class="card card-default">
            <div class="container-fluid">
                <form method="post" action="~/Admin/SliderAdd" enctype="multipart/form-data">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title line_2">أضف سلايدر</h3>

                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>

                        <div class="card-body">
                            @* files *@
                            <div class="col-md-12">
                                <div class="card card-default">

                                    <div class="card-body">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.files, htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-10">
                                                @Html.TextBoxFor(model => model.files, "", new { @type = "file" })
                                            </div>
                                        </div>

                                    </div>
                                    <!-- /.card-body -->

                                </div>
                                <button type="submit" class="btn btn-success" style="width:inherit">Submit</button>
                                <!-- /.card -->
                            </div>
                            @* --------------------------- *@
                        </div>

                        <!-- /.card-body -->
                    </div>
                </form>  <!-- /.card -->
            </div>
        </div>
        <!-- /.card -->
    </div>
</div>
