@model marble.ViewModels.ProductsPageModel
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string baseUrl = Request.Url.Scheme + "://" + Request.Url.Authority + Request.ApplicationPath.TrimEnd('/') + "/";
    baseUrl = baseUrl + "Content/Upload/";
}
<style>
    .header-font {
        font-family: 'Cairo', sans-serif;
        text-align: right;
        direction: rtl;
    }

    .footer-font {
        font-family: 'Cairo', sans-serif;
        text-align: right;
    }

    .header-font-bold {
        font-family: 'Almarai', sans-serif;
        text-align: right;
        direction: rtl;
    }

    .line_1 {
        font-family: 'Cairo', sans-serif;
        text-align: right;
        font-size: larger;
    }

    .line_2 {
        font-family: 'Cairo', sans-serif;
        text-align: right;
        font-weight: bolder;
        font-size: larger;
    }

    .rtl {
        direction: rtl;
        text-align: right;
    }

    .text-font {
        font-family: GE-Flow-Regular;
    }
</style>
<div class="container rtl line_1">
    <h2 class="section-title ">صور أخرى</h2>
    <figure class="wp-block-gallery columns-3 is-cropped">
        <ul class="blocks-gallery-grid">
            @foreach (var item in Model.productGallery)
            {
                <li class='blocks-gallery-item'><figure><a href='@baseUrl@item.Url'  data-fancybox="gallery" rel="nofollow"><img  style="margin-left:2px;width:255px;height:300px" srcset="@baseUrl@item.Url" data-srcset="@baseUrl@item.Url" data-src="@baseUrl@item.Url" data-sizes="(max-width: 500px) 100vw, 500px" class="lazyload" src="@baseUrl@item.Url" /></a></figure></li>
            }
        </ul>
    </figure>
</div>
